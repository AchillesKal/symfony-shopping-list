{% extends 'app/layout.html.twig' %}

{% block title %}New ShoppingList{% endblock %}

{% block content %}
    <div class="table">
        <div>
            <div>
                <h1>{{ shopping_list.name }}</h1>
                <a href="{{ path('homepage') }}">
                    <i class="fas fa-arrow-circle-left"></i>
                    back to list
                </a>

                <a class="btn" href="{{ path('shopping_list_edit', {'id': shopping_list.id}) }}">edit</a>
            </div>
            <div>
                <div>CreatedAt</div>
                <div>{{ shopping_list.createdAt ? shopping_list.createdAt|date('Y-m-d H:i') : '' }}</div>
            </div>
            <div>
                <div>UpdatedAt</div>
                <div>{{ shopping_list.updatedAt ? shopping_list.updatedAt|date('Y-m-d H:i') : '' }}</div>
            </div>
            <div>
                {% for product in shopping_list.products %}
                    <div>
                        {{ product.name }}
                    </div>
                {% else %}
                    <div>
                        There are no products in this list.
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {{ include('shopping_list/_delete_form.html.twig') }}
{% endblock %}